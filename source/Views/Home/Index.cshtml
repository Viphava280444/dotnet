@model IEnumerable<SimpleApi.Models.Message>
@{
    ViewData["Title"] = "Simple .NET Core API";
}

<div class="container">
    <h1>Simple .NET Core Application</h1>
    
    <div class="messages-container">
        <h2>Messages</h2>
        @if (!Model.Any())
        {
            <p>No messages available.</p>
        }
        else
        {
            foreach (var message in Model)
            {
                <div class="message">
                    <p><strong>ID:</strong> @message.Id</p>
                    <p><strong>Content:</strong> @message.Content</p>
                </div>
            }
        }
    </div>
    
    <div class="api-info">
        <h2>API Endpoints</h2>
        <p>This application provides the following RESTful API endpoint:</p>
        <ul>
            <li><code>GET /api/messages</code> - Get all messages</li>
        </ul>
    </div>
</div> 